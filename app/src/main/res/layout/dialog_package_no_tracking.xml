<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/packageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter package name"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createNewButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cornerRadius="4dp"
            android:textSize="10sp"
            android:text="Create New"
            android:backgroundTint="@color/success_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToPackageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cornerRadius="4dp"
            android:textSize="10sp"
            android:text="Add To Package"
            android:backgroundTint="@color/toDoBlue" />
    </LinearLayout>
</LinearLayout>
