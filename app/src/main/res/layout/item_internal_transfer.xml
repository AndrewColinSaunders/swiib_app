<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView_transfer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Internal Transfer"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_sourceDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Source Document: "
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView_productDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Details: "
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView_transferDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer Date: 2024-02-27 (Today)"
            android:layout_marginTop="8dp" />

        <!--
        <Button
            android:id="@+id/button_accept_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept Transfer"
            android:layout_marginTop="16dp"
            android:background="?attr/colorPrimary"
            android:textColor="@android:color/white" />
        -->
    </LinearLayout>
</androidx.cardview.widget.CardView>